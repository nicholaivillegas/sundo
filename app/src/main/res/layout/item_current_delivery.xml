<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Nico Villegas"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_dash_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/text_name"
                android:layout_toRightOf="@id/text_name"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_name_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_toEndOf="@id/text_dash_label"
                android:layout_toRightOf="@id/text_dash_label"
                android:text="Jovi Granados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/text_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_name"
                android:layout_marginBottom="3dp"
                android:text="WAITING FOR PICKUP"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_status"
                android:drawableLeft="@drawable/ic_date_range_black_18dp"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/ic_date_range_black_18dp"
                android:text="Mar 14, 2017 2:35pm"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_below="@id/text_time"
                android:layout_marginTop="5dp"
                android:weightSum="3">

                <Button
                    android:id="@+id/button_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_red"
                    android:drawableLeft="@drawable/ic_close_white_18dp"
                    android:drawableStart="@drawable/ic_close_white_18dp"
                    android:padding="10dp"
                    android:text="CANCEL"
                    android:textColor="@color/colorLightPrimary" />

                <Button
                    android:id="@+id/button_accept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_green"
                    android:drawableLeft="@drawable/ic_check_white_18dp"
                    android:drawableStart="@drawable/ic_check_white_18dp"
                    android:padding="10dp"
                    android:text="ACCEPT"
                    android:textColor="@color/colorLightPrimary" />

                <Button
                    android:id="@+id/button_gps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_selector_blue"
                    android:drawableLeft="@drawable/ic_location_on_white_18dp"
                    android:drawableStart="@drawable/ic_location_on_white_18dp"
                    android:padding="10dp"
                    android:text="GPS"
                    android:textColor="@color/colorLightPrimary" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>